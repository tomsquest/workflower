<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%thread] %highlight(%-5level) %blue(%class.%method:%line) - %msg%n</pattern>
        </encoder>
    </appender>

    <!--
    <logger name="workflower" level="DEBUG"/>
    -->

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
